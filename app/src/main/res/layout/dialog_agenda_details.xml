<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/aDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/aTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agenda Title"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/aCreatorTv"
            android:layout_margin="5dp"
            android:layout_below="@id/aDescTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Creator"/>

        <ImageView
            android:id="@+id/agendaIc"
            android:layout_gravity="center_horizontal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_agenda"/>

        <TextView
            android:id="@+id/aDateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21 JUN 2021"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_below="@id/aTitleTv"/>

        <TextView
            android:id="@+id/aDescTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Agenda Desc"
            android:textAlignment="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="close"
        android:background="@null"
        android:layout_marginTop="10dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/aDetails"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/joinBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/aDetails"
        android:layout_toStartOf="@id/closeBtn"/>

    <Button
        android:id="@+id/contactBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Person"
        android:background="@null"
        android:layout_marginTop="10dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/aDetails"
        android:layout_alignParentStart="true"/>

</RelativeLayout>